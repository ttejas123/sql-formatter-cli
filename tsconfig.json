{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,          // ðŸ‘ˆ generates .d.ts
    "declarationMap": true,       // ðŸ‘ˆ optional: helps with debugging
    "emitDeclarationOnly": false, // ðŸ‘ˆ ensures .js + .d.ts are built
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}
